@model WingtipToys.Models.Category
@{
    ViewData["Title"] = "Create Category";   
    Layout =  "/Views/Shared/_Layout.cshtml";     
    var errMessage  = ViewBag.ErrMessage as string;     
}
<partial name="_StatusMessage" model=@errMessage></partial>
<h4>Create new Category</h4>
<div class="row">
    <div class="col-md-8">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>       
            
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea  rows="3" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index">Categories List</a>
</div>
