@model WingtipToys.Models.Category

@{
    ViewData["Title"] = "Category Details";
    Layout =  "/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            Category Name
        </dt>
        <dd class = "col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class = "col-sm-2">
            Decription
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryID">Edit</a> |
    <a asp-action="Index">Categories List</a>
</div>