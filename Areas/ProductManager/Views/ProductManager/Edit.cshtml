@model WingtipToys.Models.Product
@{
    ViewData["Title"] = "Edit Category";   
    Layout =  "/Views/Shared/_Layout.cshtml";   
    var list = ViewData["categories"] as MultiSelectList;
    string ErrMessage =  ViewBag.ErrMessage as string;       
}
<partial name="_StatusMessage" model=@ErrMessage></partial>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
             <input type="hidden" asp-for="ProductID" />
             <div class="form-group py-2">
                <label>Category</label>
                @Html.DropDownList("categoryID",list,new { @class="form-select w-100"})
            </div>        

            <div class="form-group py-2">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="file" name="NewImage" id="selectfileupload" class="collapse" onchange="UpLoadNewPhoto()"/>  
                <span class="btn btn-primary" onclick="ClickButtonUpload()">Select new Image</span>
                <div id="box-photo-upload" class="d-flex flex-wrap photo-upload" data-id="@Model.ProductID">
                </div>
            </div>
            
             <div class="form-group py-2">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
                       
            <div class="form-group py-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group py-2">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Products List</a>
</div>


@section Scripts {

    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />

    <partial name="_ValidationScriptsPartial" />

    <script>
        function AutoUploadPhoto()
        {
                var formData = new FormData();
                var id = $("#box-photo-upload").data("id");
                formData.append("id", id);
                var sofile = document.getElementById("selectfileupload").files.length;
                if (sofile == 0) return;
                var fileData = document.getElementById("selectfileupload").files[0];
                formData.append("FileUpload", fileData)
                var urlUpload = "@Url.Action("UploadPhotoApi")";
            $.ajax({
                data: formData,
                cache: false,
                url: urlUpload,
                type: "POST",
                contentType: false,
                processData: false,
                success: function(data) 
                {
                    // ... xu ly du lieu lay duoc
                    LoadPhotos();
                }
            });
                                        
        } 
        function ClickButtonUpload()
        {
            $("#selectfileupload").click();
        }
        function setClickDeletePhoto()
        {
            $("#box-photo-upload .photodetail span").click(function () {
                    if (confirm("Có chắc chắn xóa ảnh?") != true) return;
                    var spanButton = $(this);
                    var id = spanButton.data("id");
                    var formData = new FormData();
                    formData.append("id", id);
                    var urlDeletePhoto = "@Url.Action("DeletePhoto")";
            $.ajax({
                data: formData,
                cache: false,
                url: urlDeletePhoto,
                type: "POST",
                contentType: false,
                processData: false,
                success: function(data) 
                {
                    // ... xu ly du lieu lay duoc
                    LoadPhotos();
                    
                }
            });
                            
            });
        }
        function UpLoadNewPhoto()
        {   
            var box = $("#box-photo-upload");
            var ProductID = box.data("id");
            box.empty();

            var formData = new FormData();
            formData.append("productid", ProductID);

            var sofile = document.getElementById("selectfileupload").files.length;
            if (sofile == 0) return;
            var fileData = document.getElementById("selectfileupload").files[0];
            formData.append("FileUpload", fileData)

            var urlUpload = "@Url.Action("UpLoadNewPhoto")";
            $.ajax({
                data: formData,
                cache: false,
                url: urlUpload,
                type: "POST",
                contentType: false,
                processData: false,
                success: function(data) 
                {
                    // ... xu ly du lieu lay duoc
                    console.log(data.message);
                    var e = $(
                            '<div class="photodetail w-25 p-1">'
                                + '<img class="w-100" src="'+ data.message +'" />');
                    box.append(e);      
                }
            });
        }
        function LoadPhotos()
        {
            var box = $("#box-photo-upload");
            var ProductID = box.data("id");
            box.empty();
            var formData = new FormData();
            formData.append("productid", ProductID);
            var urlListPhoto = "@Url.Action("ListPhotos")";
            $.ajax({
                data: formData,
                cache: false,
                url: urlListPhoto,
                type: "POST",
                contentType: false,
                processData: false,
                success: function(data) 
                {
                    // ... xu ly du lieu lay duoc
                    var e = $(
                            '<div class="photodetail w-25 p-1">'
                                + '<img class="w-100" src="'+ data.image +'" />');
                            box.append(e);      

                    @* data.photos.forEach(function(item) {
                        var e = $(
                            '<div class="photodetail w-25 p-1">'
                                + '<img class="w-100" src="'+ item.path +'" />'
                                + '<span class="btn btn-danger" data-id="'+ item.id +'">Delete</span></div>');
                            box.append(e);      
                    }); *@
                    @* setClickDeletePhoto(); *@
                }
            });
            
            // console.log(ProductID);
        }
        $(document).ready(function() {
            LoadPhotos();
        });
    </script>

}